local AC = {}

AC.Args = {
    {'X-1', 1},
    {'X-3', 1}
}

function AC.compare(args1, args2)
    if #args1 ~= #args2 then
        return false
    end
    
    for i = 1, #args1 do
        if args1[i] ~= args2[i] then
            return false
        end
    end
    
    return true
end

function AC.check(args)
    for _, pattern in ipairs(AC.Args) do
        if AC.compare(args, pattern) then
            return true
        end
    end
    return false
end

local meta = getrawmetatable(game)
setreadonly(meta, false)

local oldIndex = meta.__index
meta.__index = function(self, key)
    if (key == 'FireServer' and self:IsA('RemoteEvent')) or
       (key == 'InvokeServer' and self:IsA('RemoteFunction')) then
        return function(_, ...)
            local args = {...}
            
            if AC.check(args) then
                print('NiceâœŒ: ' .. self.Name)
                return
            end
            
            return oldIndex(self, key)(_, unpack(args))
        end
    end
    return oldIndex(self, key)
end

setreadonly(meta, true)
